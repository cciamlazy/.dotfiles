#!/usr/bin/env node
'use strict'

const R = require('./utils/ramda')
const program = require('./utils/program')

process.title = 'decode'

program
  .usage('<base64_encoded_string>')
  .description('decode a base64 encoded base64_encoded_string')
  .parse(process.argv)

const log = R.bind(console.log, console)
const base64encode = R.pipe(
  R.defaultTo(''),
  R.constructN(1, Buffer),
  R.invoker(1, 'toString')('base64')
)
const run = R.pipe(
  R.path([ 'args', '0' ]),
  base64encode,
  log
)

run(program)
