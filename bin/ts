#!/usr/bin/env node
'use strict'

process.title = 'ts'

const program = require('commander')

program
  .version('0.0.1')
  .usage('[<timestamps ...>]')
  .description('Converts unix timestamps (ms) to a readable date')
  .parse(process.argv)

if (!program.args.length) return console.log(Date.now())

program.args.forEach((arg) => {
  console.log(new Date(parseInt(arg, 10)))
})
