#!/usr/bin/env node
'use strict'

const R = require('../node_modules/ramda/dist/ramda.js')
const program = require('../node_modules/commander/index.js')

process.title = 'decode'

program
  .usage('<base64_encoded_string>')
  .description('decode a base64 encoded base64_encoded_string')
  .parse(process.argv)

const log = R.bind(console.log, console)
const base64decode = R.pipe(
  R.defaultTo(''),
  R.partialRight(Buffer.from, ['base64']),
  R.toString
)
const run = R.pipe(base64decode, log)

run(program.args[0])
