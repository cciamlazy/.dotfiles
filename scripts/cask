#!/usr/bin/env bash

# cask setup
# ----------
apps=(
  google-chrome
  firefox
  atom
  skype
  sequel-pro
  mamp
  virtualbox
  steam
  league-of-legends
  minecraft
  battle-net
  macid
)

echo "Installing apps..."
brew cask install --appdir="/Applications" ${apps[@]}

# Atom specific setup
apm stars --install

echo ""
echo "Would you like to install the games?  (y/N)"
read -r response
if [[ $response =~ ^([yY][eE][sS]|[yY])$ ]]; then
  # Battle.net specific setup
  open "/opt/homebrew-cask/Caskroom/battle-net/latest/Battle.net-Setup-enUS.app"
  # League of Legends specific setup
  open "/Applications/League of Legends.app"
  # Steam specific setup
  open "/Applications/Steam.app"
  # Minecraft specific setup
  open "/Applications/Minecraft.app"
fi
