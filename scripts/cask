#!/usr/bin/env bash

# cask setup
# ----------
apps=(
  google-chrome
  firefox
  atom
  skype
  slack
  sequel-pro
  mamp
  virtualbox
  steam
  league-of-legends
  minecraft
  battle-net
  macid
)

echo "Installing apps..."
brew cask install --appdir="/Applications" ${apps[@]}

# Atom specific setup
apm stars --install
