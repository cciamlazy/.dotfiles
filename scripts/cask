#!/usr/bin/env bash

# cask setup
# ----------
apps=(
  google-chrome
  firefox
  virtualbox
  atom
  skype
  sublime-text
  steam
  league-of-legends
  minecraft
  sequel-pro
  mamp
  silverlight
  reflector
)

echo "Installing apps..."
brew cask install --appdir="/Applications" ${apps[@]}

brew cask alfred link
